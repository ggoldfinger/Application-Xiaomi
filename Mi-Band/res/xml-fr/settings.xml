    <Preference android:title="Mise à jour du firmware" android:key="settings_fw_upgrade" />
    <Preference android:title="Réinitialiser le Mi-Fit" android:key="settings_bracelet_reset" />
    <Preference android:title="Commentaires" android:key="settings_feedback" />
    <Preference android:title="À propos" android:key="settings_about">
        <intent android:targetPackage="cn.com.smartdevices.bracelet" android:action="android.intent.action.MAIN" android:targetClass="cn.com.smartdevices.bracelet.activity.BraceletInfoActivity" />
    </Preference>
</PreferenceScreen>
